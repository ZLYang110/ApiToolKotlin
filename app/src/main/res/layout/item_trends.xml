<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_left_15"
        android:paddingRight="@dimen/common_right_15">
        <TextView style="@style/AppTheme.Label"
            android:textColor="@color/text_surface"
            android:layout_marginTop="30dp"
            android:layout_height="45dp"
            android:text="21:44"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_left_15"
            android:layout_marginRight="@dimen/common_right_15"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="@dimen/division_line"
                android:layout_height="30dp"
                android:background="@color/line"/>
            <com.flyco.roundview.RoundFrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:rv_isRadiusHalfHeight="true"
                android:background="@color/line"
                app:rv_strokeWidth="@dimen/division_line">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_edge_10"
                    android:contentDescription="@string/app_name"
                    android:background="@color/line"
                    app:srcCompat="@drawable/ic_home_black_24dp"/>
            </com.flyco.roundview.RoundFrameLayout>
            <View
                android:layout_width="@dimen/division_line"
                android:layout_height="match_parent"
                android:background="@color/line"/>
        </LinearLayout>
        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="@dimen/common_edge_10"
            android:orientation="vertical"
            android:padding="@dimen/common_edge_10"
            app:rv_strokeColor="@color/line"
            app:rv_strokeWidth="@dimen/division_line"
            app:rv_cornerRadius="@dimen/common_edge_10">
            <TextView style="@style/AppTheme.Label.Title"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_surface"
                android:text="Steffen Norgaard Andersen"/>
            <TextView style="@style/AppTheme.Label"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/common_edge_10"
                android:textColor="@color/text_surface"
                android:text="Lorem ipsum dolor sit amet , consecteur adipiscing elit, sed do eiusmod tempor incidi-dunt ut labore et dlore magna aliqua. Ut enim ad minim veniam, sed do eiusmod quis nostrud exrcitation."/>
        </com.flyco.roundview.RoundLinearLayout>
    </LinearLayout>
</LinearLayout>