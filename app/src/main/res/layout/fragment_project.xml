<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >
    <com.zlylib.titlebarlib.ActionBarCommon
        android:id="@+id/abc"
        style="@style/ActionBar.Common"
        app:abc_titleText="项目"
        app:abc_rightIconRes="@mipmap/icon_setting"
        />

    <LinearLayout
        android:id="@+id/www"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/common_edge_15">
        <com.meetsl.scardview.SCardView
            android:id="@+id/tv_weather"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            app:cardCornerRadius="10dp"
            app:cardCornerVisibility="noLT_RBCorner"
            app:cardElevation="5dp"
            app:cardLightDirection="top"
            app:cardPreventCornerOverlap="true"
            app:cardShadowEndColor="#0333B5E5"
            app:cardShadowStartColor="#3733B5E5"
            app:cardUseCompatPadding="false"
            app:cardUseCornerArea="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="天气"
                />

        </com.meetsl.scardview.SCardView>
    </LinearLayout>

</LinearLayout>