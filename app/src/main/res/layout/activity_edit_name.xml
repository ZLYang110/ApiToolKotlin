<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.zlylib.titlebarlib.ActionBarCommon
        android:id="@+id/abc"
        style="@style/ActionBar.Common.Back"
        app:abc_titleText="姓名"
        app:abc_rightText="确定"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_common"
        android:padding="3dp"
        android:background="@drawable/bg_white"
        android:paddingLeft="10dp">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入..."
            android:maxLength="20"
            android:inputType="text"
            android:singleLine="true"
            android:paddingLeft="@dimen/common_left_15"
            android:paddingRight="@dimen/common_right_15"
            android:text=""
            android:textColor="@color/text_surface"
            android:textColorHint="@color/text_fourth"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_clear"
            android:tint="@color/third"
            android:tintMode="src_in"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:text="0/20"/>
</LinearLayout>